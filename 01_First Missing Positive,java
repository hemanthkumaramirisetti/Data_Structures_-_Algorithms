/*
Problem: First Missing Positive
Platform: LeetCode
Problem No: 41
Difficulty: Hard

Approach:
- Use cyclic sort technique.
- Place each number x at index x-1.
- Ignore negative numbers and numbers > n.
- First index where nums[i] != i+1 is the answer.

Time Complexity: O(n)
Space Complexity: O(1)
*/

class Solution {
    public int firstMissingPositive(int[] nums) {
        int n = nums.length;

        for(int i = 0; i < n; i++){
            while(nums[i] > 0 && nums[i] <= n 
                  && nums[nums[i] - 1] != nums[i]){
                
                int correctIndex = nums[i] - 1;

                int temp = nums[i];
                nums[i] = nums[correctIndex];
                nums[correctIndex] = temp;
            }
        }

        for(int i = 0; i < n; i++){
            if(nums[i] != i + 1){
                return i + 1;
            }
        }

        return n + 1;
    }
}
